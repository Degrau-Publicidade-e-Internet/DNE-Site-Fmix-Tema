@model List<Banners>



@if (Model.Count() > 0)
{
    @if (Model[0].ID_Marca > 0)
    {

        @foreach (var item in Model.Where(x => x.Ordem == 0).ToList().OrderBy(y => Guid.NewGuid()).Take(1))
        {
            @if (!string.IsNullOrEmpty(item.Imagem))
            {
                <a href="@item.URLBanner" target="@item.Target">
                    <img src="@Html.Domain()/assets/img/lazy.png" width="50" height="50" loading="lazy" data-src-lazy="https://static.drogarianovaesperanca.com.br/banners/fmix/@item.Imagem"
         target="@item.Target"
         alt="@item.Alt"
         title="@item.Alt">
